<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout
    android:id="@+id/top_linear"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:visibility="invisible"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/events_frame"
            android:background="@drawable/circle_popup_background"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp">

            <ImageView
                android:id="@+id/events_img"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/events_icon"/>

        </FrameLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/events_txt"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:textSize="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <FrameLayout
        android:visibility="invisible"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:id="@+id/attraction_frame"
        android:background="@drawable/circle_popup_background"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp">

        <ImageView
            android:id="@+id/attraction_img"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/attarctions_icon"/>
    </FrameLayout>


        <TextView
            android:visibility="invisible"
            android:id="@+id/attractions_txt"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:textSize="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attractions"/>
    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/top_linear"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:visibility="invisible"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:id="@+id/hotspot_frame"
            android:background="@drawable/circle_popup_background"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp">

            <ImageView
                android:id="@+id/hotspot_img"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/hotspot_icon"/>
        </FrameLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/hotspots_txt"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:textSize="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotspots"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:visibility="invisible"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:id="@+id/map_frame"
            android:background="@drawable/circle_popup_background"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp">

            <ImageView
                android:id="@+id/map_img"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/small_grey_location_pin"/>
        </FrameLayout>


        <TextView
            android:visibility="invisible"
            android:id="@+id/map_txt"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:textSize="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"/>
    </LinearLayout>


    </LinearLayout>

</RelativeLayout>
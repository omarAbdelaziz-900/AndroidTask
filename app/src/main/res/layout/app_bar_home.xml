<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:background="@drawable/big_header"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_bar">

        <android.support.design.widget.AppBarLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarTheme"
            android:background="@android:color/transparent"
            android:layout_marginTop="14dp"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:elevation="0dp"
                app:layout_collapseMode="pin"
                app:theme="@style/ToolbarTheme"
                >


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_alignParentTop="true"
                    android:id="@+id/only_title_viewgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    >

                    <LinearLayout
                        android:layout_alignParentStart="true"
                        android:paddingStart="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/location_white"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/you_are_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="you are in"
                            android:background="@android:color/transparent"
                            android:textColor="#fff"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            android:layout_marginTop="3dp"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="Misr Al Gadida - Egypt"
                            android:background="@android:color/transparent"
                            android:textColor="#fff"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:paddingEnd="@dimen/_4sdp"
                            android:id="@+id/notification_img"
                            android:src="@drawable/ic_notifications_black_24dp"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_24sdp"
                           />


                        <ImageView
                            android:paddingEnd="@dimen/_4sdp"
                            android:src="@drawable/ic_today_black_24dp"
                            android:id="@+id/imgB_settings"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_24sdp"
                            />

                    </LinearLayout>


                </RelativeLayout>


                    <android.support.v7.widget.CardView
                        android:layout_marginStart="@dimen/_48sdp"
                        android:layout_marginEnd="@dimen/_48sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_below="@id/only_title_viewgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_6sdp">


                        <LinearLayout
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:drawablePadding="@dimen/_4sdp"
                                android:layout_weight="0.7"
                                android:layout_alignParentEnd="true"
                                android:padding="@dimen/_8sdp"
                                android:drawableStart="@drawable/location_search_icon"
                                android:id="@+id/search_txt"
                                android:layout_width="0dp"
                                android:inputType="text"
                                android:textCursorDrawable="@color/move_color"
                                android:imeOptions="actionDone"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>


                            <ImageView
                                android:layout_weight="0.3"
                                android:layout_toEndOf="@id/search_txt"
                                android:id="@+id/filter_img"
                                android:src="@drawable/filter_inside_search"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_24sdp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>